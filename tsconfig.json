{
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true, // emit declarations
    "importHelpers": false, // importing helper functions from tslib
    "noEmitHelpers": false, // disable emitting inline helper functions
    "noEmitOnError": true,
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true
  },
  "include": ["src"]
}
